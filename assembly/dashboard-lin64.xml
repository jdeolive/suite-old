<assembly>
  <id>dashboard-lin64</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory></baseDirectory>
  <fileSets>
    <fileSet>
      <directory>assembly/dashboard-${dashboard.version}-lin64</directory>
      <outputDirectory>/</outputDirectory>
	  <excludes>
    	<exclude>OpenGeo Dashboard/OpenGeo Dashboard</exclude>
        <exclude>**/manifest</exclude>
        <exclude>**/timanifest</exclude>
        <exclude>**/tiapp.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>dashboard/target/resources</directory>
      <outputDirectory>OpenGeo Dashboard/Resources</outputDirectory>
      <excludes>
       <exclude>**/.svn/</exclude>
       <exclude>**/.svn*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>dashboard/OpenGeo Dashboard</directory>
      <outputDirectory>OpenGeo Dashboard</outputDirectory>
      <includes>
        <include>CHANGELOG.txt</include>
        <include>LICENSE.txt</include>
        <include>manifest</include>
        <include>timanifest</include>
        <include>tiapp.xml</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>assembly/dashboard-${dashboard.version}-lin64/OpenGeo Dashboard/OpenGeo Dashboard</source>
      <outputDirectory>OpenGeo Dashboard</outputDirectory>
      <fileMode>755</fileMode>
    </file>
  </files>
</assembly>
